{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "types": ["node"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["./**/*.ts", "@types/**/*"],
  "exclude": ["node_modules", "dist"]
}
